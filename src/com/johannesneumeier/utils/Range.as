/** * defines a range from number _min to number _max */package com.johannesneumeier.utils {		public class Range 	{				private var _min:Number;		private var _max:Number;				public function Range(min:Number, max:Number) 		{			_min = min < max ? min : max;			_max = max > min ? max : min;		}				/**		 * test if number is within this range		 *		 * @param Number number 		  - check this number if it is within this range		 * @param Boolean includingBounds - flag signaling if a value that is min or 		 *									max of these bounds is regarded as within range or not		 */		public function inRange(number:Number, includingBounds:Boolean = false):Boolean 		{			if (includingBounds) {				return (number >= _min && number <= _max) ? true : false;			} else {				return (number > _min && number < _max) ? true : false;			}		}		/**		 * tests if any of the numbers within a range are also within this range		 * 		 * @param	Range range			- check this range to see it if overlaps		 */		public function overlapsWith(range:Range):Boolean 		{			return range.inRange(_min) || range.inRange(_max) ||			       inRange(range.getMinimum()) || inRange(range.getMaximum());		}				/**		 * get this range absolute numeric span		 */		public function getRangeSpan():Number 		{			return _max - _min;		}				public function getMinimum():Number 		{			return _min;		}				public function getMaximum():Number		{			return _max;		}	}	}